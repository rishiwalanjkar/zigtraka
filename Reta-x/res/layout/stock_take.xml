<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".StockTake" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/stocktake_count"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="105dp"
        android:background="@drawable/circularlayout"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/charts_and_graph_graph1_linearlayout"
            android:layout_width="80pt"
            android:layout_height="80pt"
            android:src="@drawable/bluetagicon" />

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scan a Tag"
            android:textColor="#FFFFFFFF"
            android:textSize="40dip" />
    </LinearLayout>

    <Button
        android:id="@+id/stock_take_matchinventory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="104dp"
        android:background="@drawable/buttons"
        android:text="Match Inventory"
        android:textSize="@dimen/TextSize"
        style="@style/ButtonText" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/stock_take_matchinventory"
        android:layout_alignLeft="@+id/linearLayout1"
        android:layout_marginBottom="120dp"
        android:layout_marginLeft="33dp"
        android:text="Stock Take"
        android:textColor="@color/TextColor"
        android:textSize="@dimen/TextSize" />

    <TextView
        android:id="@+id/stocktake_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignRight="@+id/linearLayout1"
        android:layout_marginRight="48dp"
        android:text="count"
        android:textColor="@color/TextColor"
        android:textSize="@dimen/TextSize" />

    <Button
        android:id="@+id/stock_take_resetbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/stock_take_matchinventory"
        android:layout_toRightOf="@+id/stocktake_count"
        android:text="Reset" 
        android:background="@drawable/buttons"
        style="@style/ButtonText"/>

</RelativeLayout>